<%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
        <h2 class="text-3xl text-red-500 font-bold text-center mb-12">
            Details of <%= favHomes.housename %>
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="rounded-lg overflow-hidden">
                <img src="<%= favHomes.imageUrl %>" alt="<%= favHomes.housename %>" class="w-30 h-40 object-cover">
            </div>
            
            <div class="space-y-6">
                <div class="border-b pb-4">
                    <h3 class="text-2xl font-semibold mb-2">House Name</h3>
                    <p class="text-gray-600"><%= favHomes.housename%></p>
                </div>

                <div class="border-b pb-4">
                    <h3 class="text-2xl font-semibold mb-2">Location</h3>
                    <p class="text-gray-600"><%= favHomes.location %></p>
                </div>
                
                <div class="border-b pb-4">
                    <h3 class="text-2xl font-semibold mb-2">Price</h3>
                    <p class="text-green-600 text-xl font-bold">$<%= favHomes.price %> / night</p>
                </div>
                
                <div class="border-b pb-4">
                    <h3 class="text-2xl font-semibold mb-2">Rating</h3>
                    <div class="flex items-center">
                        <% for (var i = 0; i < 5; i++) { %>
                            <% if (i < favHomes.rating) { %>
                                <span class="text-yellow-500">&#9733;</span>
                            <% } else { %>
                                <span class="text-gray-300">&#9733;</span> 
                            <% } %>
                        <% } %>
                        <span class="ml-2 text-lg"><%= favHomes.rating %> / 5</span>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>