<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/navbar') %>
  <h2 class="p-4 text-center">You are In Home Details Page</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
    <% if (typeof registerhomes !== 'undefined' && registerhomes.length > 0) { %>
      <% registerhomes.forEach(house => { %>
        <div class="max-w-sm rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 mx-auto">
          <!-- Image -->
          <img class="w-full h-40 object-cover" src="<%= house.imageUrl %>" alt="<%= house.housename %>">
          
          <!-- Card Content -->
          <div class="px-6 py-4">
            <!-- House Name -->
            <div class="font-bold text-xl mb-2 text-gray-800"><%= house.housename %></div>
            
            <!-- Price -->
            <p class="text-gray-700 text-base mb-2">
              <span class="font-semibold">Price:</span> Rup<%= house.price %>
            </p>
            
            <!-- Location -->
            <p class="text-gray-700 text-base mb-2">
              <span class="font-semibold">Location:</span> <%= house.location %>
            </p>
            
            <!-- Rating -->
            <p class="text-gray-700 text-base mb-2">
              <span class="font-semibold">Rating:</span>
              <% for (var i = 0; i < 5; i++) { %>
                <% if (i < house.rating) { %>
                  <span class="text-yellow-500">&#9733;</span>
                <% } else { %>
                  <span class="text-gray-300">&#9733;</span> 
                <% } %>
              <% } %>
            </p>
            <a class="bg-teal-400" href="/HomeList/<%= house.id %>">Details</a>
            <button class="bg-green-500 p-4">Book</button>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p class="text-gray-700 text-base text-center">No houses available.</p>
    <% } %>
  </div>
</div>
</div>
</body>
</html>