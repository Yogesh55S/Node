<%- include('partials/head')%>
</head>
<body>
  <%-include('partials/navbar')%>
  
    <div class="mt-10 flex justify-center">
      <div class="w-full max-w-6xl">
        <h2 class="text-gray-800 font-bold text-2xl text-center">House List</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
            <% if (typeof registerhomes !== 'undefined' && registerhomes.length > 0) { %>
            <% registerhomes.forEach(house => { %>
            <div class="max-w-sm rounded overflow-hidden shadow-lg mx-auto">
              <img class="w-full h-48 object-cover"  src="<%= house.imageUrl %>" alt="<%= house.housename %>">
              <div class="px-6 py-4">
              <div class="font-bold text-xl mb-2"><%= house.housename %></div>
              <p class="text-gray-700 text-base">Price: $<%= house.price %></p>
              <p class="text-gray-700 text-base">Location: <%= house.location %></p>
              <p class="text-gray-700 text-base">Rating: 
                <% for (var i = 0; i < 5; i++) { %>
                <% if (i < house.rating) { %>
                  <span class="text-yellow-500">&#9733;</span>
                <% } else { %>
                  <span class="text-gray-400">&#9733;</span>
                <% } %>
                <% } %>
              </p>
              </div>
            <% }); %>
            <% } else { %>
            <p class="text-gray-700 text-base text-center">No houses available.</p>
            <% } %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>